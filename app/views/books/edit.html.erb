<h1>Editing Book</h1>

<%= render  'layouts/error_messages', book: @book  %>

<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>


<% end %>

<%= link_to "Show", book_path(@book.id) %>
<p class="buttom">|</p>
<%= link_to "Back", books_path %>