<h1>Editing Book</h1>
<% @book.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>
<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>


<% end %>

<%= link_to "Show", book_path(@book.id) %>
<p>|</p>
<%= link_to "Back", homes_index_path %>