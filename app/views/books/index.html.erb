<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    <thead>
    <tbody>

        <% @book.each do |book| %>
        <tr>
            <td class="content-title"><%= book.title %></td>
            <td class="content-body"><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method:"delete",
                "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>

    <tbody>
</table>
<h2>New book</h2>

<%= render  "layouts/_error_messages" %>
<%= form_with model:@book_new, url:books_path, local:true do |f| %>


    <P>Title</P>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>

<% end %>
